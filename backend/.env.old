# Application Settings
APP_NAME=NoApplAI
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database
DATABASE_URL=postgresql+asyncpg://noapplai_user:noapplai_password_2024@localhost:5432/noapplai_db

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production-minimum-32-characters-long-12345678
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS S3 (MinIO for local development)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_REGION=us-east-1
S3_BUCKET_NAME=noapplai-documents
S3_ENDPOINT_URL=http://localhost:9000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=.pdf,.jpg,.jpeg,.png,.docx,.doc

# Email Configuration (use your own SMTP or Gmail)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@noapplai.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME=NoApplAI Platform
MAIL_TLS=True
MAIL_SSL=False

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# OpenAI (for AI matching)
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-4-turbo-preview
AI_MATCH_TEMPERATURE=0.7
AI_MATCH_MAX_TOKENS=1000

# Sentry (Optional - leave empty if not using)
SENTRY_DSN=

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:5173"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
