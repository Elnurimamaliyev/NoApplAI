  <script>
    const defaultConfig = {
      background_color: '#FFFFFF',
      surface_color: '#F8F9FC',
      text_color: '#0A2540',
      primary_action_color: '#5CE1E6',
      secondary_action_color: '#0A2540',
      font_family: 'Inter',
      font_size: 14,
      dropdown_title: 'Notifications',
      mark_read_button: 'Mark all as read',
      notification_1: 'Transcript uploaded successfully',
      notification_2: 'New AI recommended program: Harvard — MSc Engineering',
      notification_3: 'Application deadline approaching: Stanford MBA — 3 days left',
      notification_4: 'Interview scheduled: Cambridge MSc AI — Jan 25 at 2:00 PM',
      notification_5: 'Offer letter received from Imperial College London',
      notification_6: 'Missing document: English test certificate required',
      notification_7: 'Your profile is 85% complete. Add more details!',
      view_all_text: 'View All Notifications'
    };

    let config = { ...defaultConfig };

    async function onConfigChange(newConfig) {
      config = { ...config, ...newConfig };
      
      const baseSize = config.font_size || defaultConfig.font_size;
      const customFont = config.font_family || defaultConfig.font_family;
      const baseFontStack = 'Inter, sans-serif';
      const headingFontStack = 'Montserrat, sans-serif';

      document.body.style.fontFamily = `${customFont}, ${baseFontStack}`;
      document.body.style.fontSize = `${baseSize}px`;

      const dropdownTitle = document.getElementById('dropdown-title');
      if (dropdownTitle) {
        dropdownTitle.textContent = config.dropdown_title || defaultConfig.dropdown_title;
        dropdownTitle.style.color = config.text_color || defaultConfig.text_color;
        dropdownTitle.style.fontFamily = `${customFont}, ${headingFontStack}`;
        dropdownTitle.style.fontSize = `${baseSize * 1.15}px`;
      }

      const markReadBtn = document.getElementById('mark-read-btn');
      if (markReadBtn) {
        markReadBtn.textContent = config.mark_read_button || defaultConfig.mark_read_button;
        markReadBtn.style.color = config.primary_action_color || defaultConfig.primary_action_color;
        markReadBtn.style.fontFamily = `${customFont}, ${baseFontStack}`;
        markReadBtn.style.fontSize = `${baseSize * 0.85}px`;
      }

      const notifications = [
        { id: 'notification-1', key: 'notification_1' },
        { id: 'notification-2', key: 'notification_2' },
        { id: 'notification-3', key: 'notification_3' },
        { id: 'notification-4', key: 'notification_4' },
        { id: 'notification-5', key: 'notification_5' },
        { id: 'notification-6', key: 'notification_6' },
        { id: 'notification-7', key: 'notification_7' }
      ];

      notifications.forEach(({ id, key }) => {
        const element = document.getElementById(id);
        if (element) {
          element.textContent = config[key] || defaultConfig[key];
          element.style.color = config.text_color || defaultConfig.text_color;
          element.style.fontFamily = `${customFont}, ${baseFontStack}`;
          element.style.fontSize = `${baseSize}px`;
        }
      });

      const viewAllLink = document.getElementById('view-all-link');
      if (viewAllLink) {
        viewAllLink.textContent = config.view_all_text || defaultConfig.view_all_text;
        viewAllLink.style.color = config.primary_action_color || defaultConfig.primary_action_color;
        viewAllLink.style.fontFamily = `${customFont}, ${baseFontStack}`;
        viewAllLink.style.fontSize = `${baseSize}px`;
      }

      const dropdown = document.querySelector('.notification-dropdown');
      if (dropdown) {
        dropdown.style.backgroundColor = config.background_color || defaultConfig.background_color;
      }
    }

    function mapToCapabilities(config) {
      return {
        recolorables: [
          {
            get: () => config.background_color || defaultConfig.background_color,
            set: (value) => {
              config.background_color = value;
              window.elementSdk.setConfig({ background_color: value });
            }
          },
          {
            get: () => config.text_color || defaultConfig.text_color,
            set: (value) => {
              config.text_color = value;
              window.elementSdk.setConfig({ text_color: value });
            }
          },
          {
            get: () => config.primary_action_color || defaultConfig.primary_action_color,
            set: (value) => {
              config.primary_action_color = value;
              window.elementSdk.setConfig({ primary_action_color: value });
            }
          }
        ],
        borderables: [],
        fontEditable: {
          get: () => config.font_family || defaultConfig.font_family,
          set: (value) => {
            config.font_family = value;
            window.elementSdk.setConfig({ font_family: value });
          }
        },
        fontSizeable: {
          get: () => config.font_size || defaultConfig.font_size,
          set: (value) => {
            config.font_size = value;
            window.elementSdk.setConfig({ font_size: value });
          }
        }
      };
    }

    function mapToEditPanelValues(config) {
      return new Map([
        ['dropdown_title', config.dropdown_title || defaultConfig.dropdown_title],
        ['mark_read_button', config.mark_read_button || defaultConfig.mark_read_button],
        ['notification_1', config.notification_1 || defaultConfig.notification_1],
        ['notification_2', config.notification_2 || defaultConfig.notification_2],
        ['notification_3', config.notification_3 || defaultConfig.notification_3],
        ['notification_4', config.notification_4 || defaultConfig.notification_4],
        ['notification_5', config.notification_5 || defaultConfig.notification_5],
        ['notification_6', config.notification_6 || defaultConfig.notification_6],
        ['notification_7', config.notification_7 || defaultConfig.notification_7],
        ['view_all_text', config.view_all_text || defaultConfig.view_all_text]
      ]);
    }

    if (window.elementSdk) {
      window.elementSdk.init({
        defaultConfig,
        onConfigChange,
        mapToCapabilities,
        mapToEditPanelValues
      });
    }

    document.getElementById('mark-read-btn').addEventListener('click', (e) => {
      e.preventDefault();
      const unreadItems = document.querySelectorAll('.notification-item.unread');
      unreadItems.forEach(item => {
        item.classList.remove('unread');
        const dot = item.querySelector('.unread-dot');
        if (dot) {
          dot.style.opacity = '0';
          setTimeout(() => dot.remove(), 200);
        }
      });
    });

    document.querySelectorAll('.notification-item').forEach(item => {
      item.addEventListener('click', function() {
        if (this.classList.contains('unread')) {
          this.classList.remove('unread');
          const dot = this.querySelector('.unread-dot');
          if (dot) {
            dot.style.opacity = '0';
            setTimeout(() => dot.remove(), 200);
          }
        }
      });
    });
  </script>
