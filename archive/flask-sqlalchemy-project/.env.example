# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
# IMPORTANT: Generate a secure random key for production
# python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://flask_user:flask_password@localhost:5432/flask_app
TEST_DATABASE_URL=postgresql://flask_user:flask_password@localhost:5432/flask_app_test

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# SSL Configuration (set to require, verify-ca, or verify-full for production)
DB_SSL_MODE=prefer

# CORS Configuration
# Comma-separated list of allowed origins (* for all - NOT RECOMMENDED FOR PRODUCTION)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Application Settings
DEBUG=True
TESTING=False

# Security Settings (Production)
# FORCE_HTTPS=True
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting (if implemented)
# RATELIMIT_ENABLED=True
# RATELIMIT_DEFAULT=100 per hour

# Logging
# LOG_LEVEL=INFO
# LOG_FILE=logs/app.log
